alias prodip='echo;echo "Checking ProtonVPN for IP address...";sudo protonvpn-cli --ip; echo;'
alias prodoff='echo;echo "Instucting ProtonVPN DISCONNECT...";sudo protonvpn-cli --disconnect;echo;'
alias prodnewfast='echo;echo "Assuming no connection...";echo;echo "Connecting to fastest ProtonVPN server...";sudo protonvpn-cli --fastest-connect;echo "";echo "Connected getting new IP address...";sudo protonvpn-cli --status; echo;'
alias prodnewrand='echo;echo "Assuming no connection...";echo;echo "Connecting randomly to ProtonVPN...";sudo protonvpn-cli --random-connect;echo "";echo "Connected getting new IP address...";sudo protonvpn-cli --status; echo;'
alias prodrand='echo;echo "Instucting ProtonVPN DISCONNECT...";sudo protonvpn-cli --disconnect;echo;echo "Connecting randomly to ProtonVPN...";sudo protonvpn-cli --random-connect;echo "";echo "Connected getting new IP address...";sudo protonvpn-cli --status;echo;'
alias prodstatus='echo;echo "Determining ProtonVPN status...";sudo protonvpn-cli --status;echo;'
alias prodhelp='echo;echo "Getting you help...";sudo protonvpn-cli --help;echo;'
alias prod='echo;echo "The term is for use with a set of ProtonVPN commands.  Prodding the VPN.  Get it?  See $(tput setaf5)prodhelp$(tput sgr0)";echo;'
alias produs='echo;echo "Connecting to fastest UDP server in the US over ProtonVPN...";sudo protonvpn-cli -cc US UDP;echo;echo "Connected getting new IP address...";sudo protonvpn-cli --status;echo;'
alias prodcdn='echo;echo "Connecting to fastest UDP server in Canada over ProtonVPN...";sudo protonvpn-cli -cc CA UDP;echo;echo "Connected getting new IP address...";sudo protonvpn-cli --status;echo;'
alias prodswiz='echo;echo "Connecting to fastest UDP server in Switzerland over ProtonVPN...";sudo protonvpn-cli -cc CH UDP;echo;echo "Connected getting new IP address...";sudo protonvpn-cli --status;echo;'
alias prodger='echo;echo "Connecting to fastest UDP server in Germany over ProtonVPN...";sudo protonvpn-cli -cc DE UDP;echo;echo "Connected getting new IP address...";sudo protonvpn-cli --status;echo;'
alias prodjap='echo;echo "Connecting to fastest UDP server in Japan over ProtonVPN...";sudo protonvpn-cli -cc JP UDP;echo;echo "Connected getting new IP address...";sudo protonvpn-cli --status;echo;'
alias prodhk='echo;echo "Connecting to fastest UDP server in Honk Kong over ProtonVPN...";sudo protonvpn-cli -cc HK UDP;echo;echo "Connected getting new IP address...";sudo protonvpn-cli --status;echo;'
alias seeprod='clear;echo $(tput setaf 4)"******************   PROTONVPN ALIASES  ******************"$(tput sgr0);echo; echo "Best run in Bash.";echo;echo "$(tput setaf 5)prodip$(tput sgr0) - Display current IP address."; echo "$(tput setaf 5)prodoff$(tput sgr0) - DISCONNECT."; echo "$(tput setaf 5)prodnewfast$(tput sgr0) - Connect to fastest ProtonVPN server."; echo "$(tput setaf 5)prodnewrand$(tput sgr0) - Connect to random ProtonVPN server."; echo "$(tput setaf 5)prodrand$(tput sgr0) - DISCONNECT and then connect to random ProtonVPN server."; echo "$(tput setaf 5)prodstatus$(tput sgr0) - ProtonVPN status."; echo "$(tput setaf 5)prodhelp$(tput sgr0) - ProtonVPN help."; echo "$(tput setaf 5)prod$(tput sgr0) - Displays explanation of this code name, "prod"."; echo "$(tput setaf 5)prodCTRY$(tput sgr0) - Connects to fastest in specified country; us, cdn, swiz, jap, or hk."; echo "$(tput setaf 5)seeprod$(tput sgr0) - Displays this list of available commands."; echo;echo;'
